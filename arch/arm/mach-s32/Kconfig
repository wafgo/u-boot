	imply DWC_ETH_QOS_DEVICES
	imply DWC_ETH_QOS_S32CC
	imply EFI_LOADER
	imply EFI_LOADER_BOUNCE_BUFFER
	imply FSL_DSPI
	imply FSL_QSPI
	imply FS_FAT
	imply MISC
	imply MP
	imply NXP_S32CC_PIT_TIMER
	imply PCI
	imply PCIE_S32GEN1
	imply S32CC_CMU
	imply SPI
	imply SYS_I2C_MXC
	imply TIMER
	select ARM_SMCCC
	select CLK
	select CLK_SCMI
	select CPU
